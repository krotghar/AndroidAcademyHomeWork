<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_bg_img" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="56dp"
                app:srcCompat="@drawable/ic_back" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                app:srcCompat="@drawable/ic_pg" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/title"
                android:textAppearance="@style/name" />

            <TextView
                android:id="@+id/tagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tagline"
                android:textAppearance="@style/tagline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/ic_star_enable" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/ic_star_enable" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/ic_star_enable" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/ic_star_enable" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/ic_star_disable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews"

                    android:textAppearance="@style/review" />

            </LinearLayout>

            <TextView
                android:id="@+id/storyline_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="4sp"
                android:text="@string/storyline_head"
                android:textAppearance="@style/storyline_head" />

            <TextView
                android:id="@+id/storyline_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.75"
                android:lineSpacingExtra="4sp"
                android:text="@string/storyline_body"
                android:textAppearance="@style/storyline_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="8sp"
                android:text="@string/cast"
                android:textAppearance="@style/storyline_head" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/downey"
                        android:layout_width="80dp"
                        android:layout_height="118dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="center"
                            android:src="@drawable/downey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/robert_downey_jr"
                            android:textAppearance="@style/storyline_head" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chris"
                        android:layout_width="80dp"
                        android:layout_height="118dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="center"
                            android:src="@drawable/chris" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/chris_evans"
                            android:textAppearance="@style/storyline_head" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mark"
                        android:layout_width="80dp"
                        android:layout_height="118dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="center"
                            android:src="@drawable/mark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/mark_ruffalo"
                            android:textAppearance="@style/storyline_head" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/thor"
                        android:layout_width="80dp"
                        android:layout_height="118dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="center"
                            android:src="@drawable/thor" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/chris_hemsworth"
                            android:textAppearance="@style/storyline_head" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>